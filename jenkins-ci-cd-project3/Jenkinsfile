pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'kellynkwain/nodejs-k8s-app:latest'
    }

    triggers {
        githubPush()
    }

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/devkelzs/jenkins-projects.git'
            }
        }

        stage('Debug Workspace') {
            steps {
                sh '''
                    echo "Current directory:"
                    pwd
                    echo "Listing workspace recursively:"
                    ls -lR
                '''
            }
        }

        stage('Build Image') {
            steps {
                // Change ./nodejs-k8s-app to your actual subfolder path if needed
                sh 'docker build -t $DOCKER_IMAGE ./nodejs-k8s-app'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push $DOCKER_IMAGE
                    '''
                }
            }
        }

        stage('Deploy to K8s') {
            steps {
                withCredentials([file(credentialsId: 'kubeconfig-minikube', variable: 'KUBECONFIG')]) {
                    sh '''
                        kubectl --kubeconfig=$KUBECONFIG delete deployment nodejs-deployment --ignore-not-found=true
                        kubectl --kubeconfig=$KUBECONFIG apply -f ./nodejs-k8s-app/deployment.yaml
                    '''
                }
            }
        }
    }
}
