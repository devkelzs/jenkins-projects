pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-credentials', url: 'https://github.com/your-username/my-static-website.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mkdir -p /tmp/website && cp -r * /tmp/website/'
            }
        }
        stage('Deploy') {
            steps {
                sh 'sudo rm -rf /var/www/html/my-static-website/*'
                sh 'sudo cp -r /tmp/website/* /var/www/html/my-static-website/'
                sh 'sudo chown -R www-data:www-data /var/www/html/my-static-website'
                sh 'sudo chmod -R 755 /var/www/html/my-static-website'
            }
        }
    }
}
